<p>
  <strong>Title:</strong>
  <%= reward.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= reward.description %>
</p>

<p>
  <strong>Price:</strong>
  <%= reward.price %>
</p>

<p>
  <strong>Category:</strong>
    <% reward.categories.each do |category| %>
      <%= category.title %>
    <% end %>
</p>

<p>
  <% if reward.photo.persisted?%>
    <%= image_tag reward.photo, width: '200px' %>
  <%end%>
</p>

<%= link_to 'Edit', edit_admin_reward_path, class:"btn btn-sm btn-outline-secondary" %>
<%= link_to 'Back', admin_rewards_path, class:"btn btn-sm btn-outline-secondary" %>
